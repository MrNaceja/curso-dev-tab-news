{
  "name": "curso-dev-tab-news",
  "version": "1.0.0",
  "description": "Clone do Tab News desenvolvido nas aulas do Grande Filipe Deschamps no Curso.Dev",
  "main": "index.js",
  "contributors": [
    {
      "name": "Eduardo Toriani",
      "email": "edutoriani13@gmail.com",
      "url": "https://github.com/MrNaceja"
    }
  ],
  "scripts": {
    "dev": "npm run scripts:run-dev",
    "test": "npm run services:up && concurrently -n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand --verbose\"",
    "posttest": "npm run services:down",
    "test:watch": "jest --watchAll --runInBand --verbose",
    "services": "docker compose -f infra/compose.yaml",
    "services:up": "npm run services up -- -d",
    "services:stop": "npm run services stop",
    "services:down": "npm run services down",
    "migrations": "node-pg-migrate --migrations-dir infra/migrations --envPath .env.development",
    "migrations:create": "npm run migrations create",
    "migrations:up": "npm run migrations up",
    "scripts:check-postgres-is-ready": "node infra/scripts/check-postgres-is-ready.js",
    "scripts:run-dev": "node infra/scripts/run-dev.js",
    "scripts:sleep": "node infra/scripts/sleep.js",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint --dir .",
    "prepare": "husky",
    "commit": "cz"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "3.0.2",
    "cookie": "1.1.1",
    "dotenv": "16.4.5",
    "dotenv-expand": "11.0.6",
    "next": "14.2.5",
    "node-pg-migrate": "7.6.1",
    "pg": "8.12.0",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "19.4.0",
    "@commitlint/config-conventional": "19.2.2",
    "@faker-js/faker": "9.7.0",
    "async-retry": "1.3.3",
    "commitizen": "4.3.1",
    "concurrently": "8.2.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.5",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "28.8.0",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "prettier": "3.7.4",
    "swr": "2.2.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
